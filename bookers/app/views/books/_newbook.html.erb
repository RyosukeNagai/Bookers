

<%= form_for(book) do |f| %>
<% if @book.errors.any? %>
<% @book.errors.full_messages.each do |message| %>
<p>error</p>
<span><%= message %></span>
<% end %>
<% end %>

<div class="row">
	<label class="col-xs-8">Title</label>
	<%= f.text_field :title, class: "col-xs-8 book_title" %>
</div>
<div class="row">
	<label class="col-xs-8">Opinion</label>
	<%= f.text_field :body, class: "col-xs-8 book_body" %>
</div>
     <p></p>
     <%= f.submit "Create Book", class:"btn btn-primary col-xs-8" %>

     <% end %>
