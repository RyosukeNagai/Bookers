<div class="container">
<div class="row">
<div class="col-xs-3">

<h1>Editing Book</h1>

<% if @book.errors.any? %>
<p>error</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

<div class="row">
	<label class="col-xs-8">Title</label>
	<%= f.text_field :title, class: "col-xs-8 book_title" %>
</div>
<div class="row">
	<label class="col-xs-8">Opinion</label>
	<%= f.text_field :body, class: "col-xs-8 book_body" %>
</div>
     <p></p>
     <%= f.submit "Update Book", class:"btn btn-primary col-xs-8" %>

     <% end %>

<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
<span>|</span>
<%= link_to "Back", books_path, class: "back" %>
</div>
</div>



