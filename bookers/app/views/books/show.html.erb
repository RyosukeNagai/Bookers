
<div class="container">
	<div class="row">
		<div class="col-xs-3">
<h1>User info</h1>
<%= render 'users/information', user: @user %>

<h1>New book</h1>
<%= render 'books/newbook', book: @book_new %>
</div>

<div class="col-xs-9">
<h1>Book detail</h1>
<table class="table table-hover table-inverse">
<tbody>
	
    <tr>
      <td><%= link_to (@bookdetail.user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "image" %>
      <%= @bookdetail.user.name %>
      <% end %>
    </td>
      <td><%= link_to @bookdetail.title,@bookdetail %> </td>
      <td><%= @bookdetail.body %> </td>


<% if @bookdetail.user == current_user %>
<td><%= link_to 'Edit',edit_book_path, class:"btn-sm btn-success" %></td>
<td><%= link_to 'Destroy',@bookdetail, method: :delete,date:{confirm: "本当に消しますか？"}, class: "btn-sm btn-danger" %></td>
<% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>


