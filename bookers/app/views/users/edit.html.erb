<div class="container">
<div class="row">
</div>
<div class="col-xs-3">

<h1>User info</h1>

<%= form_for(@user) do |f| %>

 <div class="row">
    <label class="col-xs-8">Name</label>
    <%= f.text_field :name, class: "name" %>
</div>

 <div class="row">
    <label class="col-xs-8">Image</label>
</div>
<div class="form-group has-icon">
    <div class="user-edit-image">
    	
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

<div class="row">
    <label class="col-xs-8">Introduction</label>
    <%= f.text_area :introduction, class: "introduction" %>


<%= f.submit "Update User", class:"btn btn-primary col-xs-3" %>
</div><br>
<% end %>
<% if @user.errors.any? %>
<p>error</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

