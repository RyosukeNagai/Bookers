<div class="row">
<div class="col-lg-2">
</div>
<div class="col-lg-4">

<h1>User info</h1>

<%= form_for(@user) do |f| %>

 <div class="row">
    <label class="col-xs-8">Name</label>
    <%= f.text_field :name, class: "name" %>
</div>

 <div class="row">
    <label class="col-xs-8">Image</label>
</div>
<div class="form-group has-icon">
    <div class="user-edit-image">
    	
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

<div class="row">
    <label class="col-xs-8">Introduction</label>
    <%= f.text_area :introduction, class: "introduction" %>
</div>

<%= f.submit "Update User", class:"btn btn-primary col-xs-3" %>

<% end %>

