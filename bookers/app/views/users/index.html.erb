<div class="home">
	<div class="row">
		<div class="col-lg-3">
<h1>User info</h1>
<%= render 'users/information', user: @user %>

<h1>New book</h1>
<%= render 'books/newbook', book: @book %>
</div>

<h1>Users</h1>
<table class="table table-hover table-inverse">
<thead>
	<tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
  </tr>
</thead>
<tbody>
	<% @users.each do |user| %>
    </tr>
    	<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "image" %>
    	</td>
    	<td><%= user.name %></td>
    </tr>
    <% end %>
</tbody>
</table>



