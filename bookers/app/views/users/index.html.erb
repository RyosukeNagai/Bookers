<div class="container">
	<div class="row">
		<div class="col-xs-3">
<h1>User info</h1>
<%= render 'users/information', user: current_user %>

<h1>New book</h1>
<%= render 'books/newbook', book: @book %>
</div>

<div class="col-xs-9">
<h1>Users</h1>
<table class="table table-hover table-inverse">
<thead>
	<tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="2"></th>
  </tr>
</thead>
<tbody>
	<% @users.each do |user| %>
    <tr>
    	<td>
        <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "image" %></td>
        <td><%= user.name %></td>
        <td>
        <%= link_to 'Show',user_path(user) %>
      </td>
        <% end %>
    </tr>
</tbody>
</table>
</div>
</div>
</div>

    
