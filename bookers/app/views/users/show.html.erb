
<div class="container">
	<div class="row">
		<div class="col-xs-3">
<h1>User info</h1>
<%= render 'users/information', user: @user %>

<h1>New book</h1>
<%= render 'books/newbook', book: @book %>
</div>

<div class="col-xs-9">
<h1>Books</h1>
<table class="table table-hover table-inverse">
<thead>
	<tr>
		<th> </th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
</thead>
<tbody>
	<% @user.books.each do |book| %>
	<tr>
		<td><%= link_to user_path do %>
			<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "image" %>
		</td>
		<% end %>
        <td><%= link_to book.title, book %> </td>
        <td><%= book.body %> </td>
	</tr>
	<% end %>
</tbody>
</table>
</div>
</div>
</div>


